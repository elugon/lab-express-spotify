<div class="container">
    {{#each albums}}
    <div class="container-item">
        {{#if images}}
        <img src="{{images.0.url}}" alt="">
        {{else}}
        <img src="/images/music_placeholder.png" alt="">
        {{/if}}
        {{name}}
        <a href="/tracks/{{this.id}}" class="button">View tracks</a>
    </div>
    {{/each}}

</div> 